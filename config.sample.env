# Kurobe Backend Configuration
# Copy this to backend/.env and fill in your values

# Environment
ENVIRONMENT=development
DEBUG=true

# Database
POSTGRES_SERVER=localhost
POSTGRES_USER=kurobe
POSTGRES_PASSWORD=kurobe
POSTGRES_DB=kurobe
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://kurobe:kurobe@localhost:5432/kurobe

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_KEY_PREFIX=kb_

# LLM API Keys
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Observability (Optional)
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_HOST=https://cloud.langfuse.com
SENTRY_DSN=

# Background Jobs
DRAMATIQ_BROKER_URL=redis://localhost:6379/1

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
